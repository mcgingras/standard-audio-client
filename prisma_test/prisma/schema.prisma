// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres@localhost:5432/nftapes_test?connection_limit=1"
}

generator client {
  provider = "prisma-client-js"
}

// Define your own datamodels here and run `yarn redwood prisma migrate dev`
model Tape {
  id           Int            @id @default(autoincrement())
  owner        String
  name         String
  capacity     Int
  quality      Int
  style        Int
  proof        String[]
  isClaimed    Boolean        @default(false)
  claimLock    Boolean        @default(false)
  Bids         Bid[]
  SalePrice    Sale[]
  SongsOnTapes SongsOnTapes[]
  ipfsHash     String         @default("")
}

model Bid {
  id     Int     @id @default(autoincrement())
  tape   Tape    @relation(fields: [tapeId], references: [id])
  tapeId Int
  bidder String
  amount Int // this should be a float
  active Boolean @default(false)
}

model Sale {
  id     Int     @id @default(autoincrement())
  tape   Tape    @relation(fields: [tapeId], references: [id])
  tapeId Int
  amount String // this should be a float
  active Boolean @default(false)
}

model Song {
  id           Int            @id @default(autoincrement())
  name         String
  artist       String
  uri          String
  SongsOnTapes SongsOnTapes[]
}

model SongsOnTapes {
  id     Int   @id @default(autoincrement())
  tapeId Int?
  tape   Tape? @relation(fields: [tapeId], references: [id])
  songId Int?
  song   Song? @relation(fields: [songId], references: [id])

  @@unique([tapeId, songId])
}
